<% layout ('layout/boilerPlate') %>
    <Center> <h1>Edit Campground</h1></Center>
    <div class="container mt-5">
        <div class="card">
            <div class="card-header bg-warning text-white">
                <h3>Edit Campground</h3>
            </div>
            <div class="card-body">
                <form action="/campgrounds/<%= camp._id %>?_method=PUT" class=" needs-validation"  novalidate method="post">
                    <div class="form-group">
                        <label for="title">Title:</label>
                        <input type="text" id="title" name="title" class="form-control" required value="<%= camp.title %>" placeholder="Enter campground title">
                        <div class="valid-feedback">
                            Looks good!
                          </div>
                    </div>
                    <div class="form-group">
                        <label for="location">Location:</label>
                        <input type="text" id="location" name="location" class="form-control" required value="<%= camp.location %>" placeholder="Enter location">
                        <div class="valid-feedback">
                            Looks good!
                          </div>
                    </div>
                    <div class="form-group">
                        <label for="price">Price:</label>
                        <input type="text" id="price" name="price" class="form-control" required value="<%= camp.price %>" placeholder="Enter price">
                        <div class="valid-feedback">
                            Looks good!
                          </div>
                    </div>
                    <div class="form-group">
                        <label for="place">Place:</label>
                        <input type="text" id="place" name="place" class="form-control" required value="<%= camp.place %>" placeholder="Enter place">
                        <div class="valid-feedback">
                            Looks good!
                          </div>
                    </div>
                    <div class="form-group">
                        <label for="image">Image URL:</label>
                        <input type="text" id="image" name="image" class="form-control"required  value="<%= camp.image %>" placeholder="Enter image URL">
                        <div class="valid-feedback">
                            Looks good!
                          </div>
                    </div>
                    <div class="form-group">
                        <label for="dis">Description:</label>
                        <textarea id="dis" name="description" class="form-control" rows="3" required placeholder="Enter description"><%= camp.description %></textarea>
                        <div class="valid-feedback">
                            Looks good!
                          </div>
                    </div>
                    <button type="submit" class="btn btn-warning btn-block">Edit</button>
                </form>
            </div>
        </div>
    </div>